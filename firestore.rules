rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Devices can only be created by an authenticated user,
    // and they can only register a device for themselves.
    match /devices/{deviceId} {
      allow read: if false; // No client can read API keys!
      allow write: if false; // No client can update/delete.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}